{
	"name": "sphere-editor-font",
	"publisher": "apollolux",
	"displayName": "Sphere Engine Font Editor",
	"version": "1.0.0",
	"description": "Sphere RFN editor",
	"repository": {
		"type": "git",
		"url": "https://github.com/sphere-group/vscode-sphere-editor"
	},
	"icon": "sphere.png",
	"main": "./out/src/extension.js",
	"engines": {
		"vscode": "^1.46.0"
	},
	"activationEvents": [
		"onCommand:sphereEdit.message",
		"onCustomEditor:sphereEdit.font",
		"onCommand:sphereEdit.openFont"
	],
	"contributes": {
		"configuration": {
			"title": "Sphere Engine Editor",
			"properties": {
				"sphereEdit.font.list.zoom": {
					"type": "integer",
					"default": 1,
					"description": "Zoom factor of font glyph list"
				},
				"sphereEdit.font.glyph.zoom": {
					"type": "string",
					"default": "fill",
					"description": "Zoom method of glyph panel",
					"enum": ["fill", "scale"],
					"enumDescriptions": [
						"Zoom the glyph panel to fit the available space",
						"Zoom the glyph panel by a numerical scale"
					]
				},
				"sphereEdit.font.glyph.zoomScale": {
					"type": "integer",
					"default": 1,
					"minimum": 1,
					"maximum": 32,
					"markdownDescription": "Zoom the glyph panel by this scale of the glyph's size. Applies when `#sphereEdit.font.glyph.zoom#` is set to `scale`."
				}
			}
		},
		"commands": [
			{
				"command": "sphereEdit.message",
				"title": "Sphere: Say Hello"
			},
			{
				"command": "sphereEdit.openFont",
				"title": "Sphere: Open RFN Font"
			}
		],
		"customEditors": [
			{
				"viewType": "sphereEdit.font",
				"displayName": "Sphere: Font Editor",
				"selector": [
					{
						"filenamePattern": "*.rfn"
					}
				],
				"priority": "default"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./ && webpack",
		"lint": "eslint . --ext .ts,.tsx",
		"webpack-watch": "webpack --watch",
		"watch": "tsc -watch -p ./"
	},
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@types/node": "^11.15.0",
		"@types/vscode": "^1.46.0",
		"@typescript-eslint/eslint-plugin": "^3.5.0",
		"@typescript-eslint/parser": "^3.0.2",
		"eslint": "^7.4.0",
		"ts-loader": "^7.0.5",
		"typescript": "^3.9.4",
		"webpack": "^4.43.0",
		"webpack-cli": "^3.3.12"
	}
}
